@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>

    .wrap-text {
        white-space: normal; /* Cho phép xuống dòng */
        word-break: break-word; /* Ngắt từ khi cần thiết */
        max-width: 250px; /* Giới hạn chiều rộng cột */
    }

    .table-responsive {
        overflow-x: auto; /* Tạo thanh cuộn ngang */
    }

    .table td, .table th {
        vertical-align: middle; /* Canh giữa nội dung */
        padding: 8px; /* Thêm khoảng cách giữa các ô */
    }

</style>
