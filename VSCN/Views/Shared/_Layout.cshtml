<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/assets/base.css" rel="stylesheet" />
    <link href="~/assets/main.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Dịch Vụ Vệ Sinh Công Nghiệp</title>

    <style>
        body {
            font-size: 18px;
        }

        /* Biểu tượng gọi điện và Zalo */
        .contact-icon {
            position: fixed;
            bottom: 80px; /* Increase this value to raise the icons */
            z-index: 1000;
            color: white;
            font-size: 30px;
        }

            .contact-icon a {
                color: white;
                padding: 15px;
                border-radius: 50%;
                background-color: #036cc1;
                margin: 0 10px;
                text-decoration: none;
            }

                .contact-icon a:hover {
                    background-color: #0056b3;
                }

        .contact-left {
            left: 20px;
        }

        .contact-right {
            right: 20px;
        }

        /* Thông tin liên hệ */
        .info-bar {
            background-color: #036cc1;
            display: flex;
            gap: 20px;
            padding: 10px;
            justify-content: flex-end;
            align-items: center;
        }

            .info-bar a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                gap: 5px;
            }

        /* Navbar */
        .navbar-custom {
            background-color: #ffffff !important;
            border-bottom: 2px solid #ddd;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #000000 !important;
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover {
                    color: #036cc1 !important;
                }

            .navbar-custom .dropdown-menu {
                background-color: #ffffff !important;
                border: 1px solid #ddd;
            }

            .navbar-custom .dropdown-item {
                color: #000000 !important;
            }

                .navbar-custom .dropdown-item:hover {
                    background-color: #f0f0f0 !important;
                    color: #036cc1 !important;
                }

        .btn-outline-dark {
            color: #000000 !important;
            border-color: #000000 !important;
        }

            .btn-outline-dark:hover {
                background-color: #000000 !important;
                color: #ffffff !important;
            }


        /* Mở rộng chiều rộng của dropdown */
        .navbar-custom .dropdown-menu {
            min-width: 400px; /* Điều chỉnh độ rộng */
            padding: 15px; /* Tăng khoảng cách bên trong */
        }

        /* Tăng kích thước chữ và khoảng cách giữa các mục */
        .navbar-custom .dropdown-item {
            font-size: 18px; /* Tăng kích thước chữ */
            padding: 10px 15px; /* Tăng khoảng cách trên dưới */
        }

        /* Padding cho điện thoại */
.navbar-custom .nav-link {
    padding: 10px 15px;
    margin: 10px 15px;
}

/* Padding cho màn hình lớn hơn (>= 768px) */
  @@media (max-width: 768px) { 
        .navbar-custom {
            padding: 10px;
           
        }
    }

        
    </style>
</head>

<body>
    <div class="main">
        <div class="container" style="background-color: white;padding:0px;">
            <!-- Thông tin liên hệ -->
            <div class="info-bar">
                <a href="tel:0123456789" class="phone-link-information">
                    <i class="fas fa-phone-alt"></i>
                    <span id="phoneInfor">0123456789</span>
                </a>
                <a href="mailto:example@example.com">
                    <i class="fas fa-envelope"></i>
                    <span id="emailInfor">example@example.com</span>
                </a>
                <a href="/Login/Index">
                    <i class="fa-solid fa-right-to-bracket"></i>
                   
                </a>
            </div>

            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-custom">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">Dịch Vụ Vệ Sinh</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link " aria-current="page" href="/">Trang Chủ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Dịch Vụ</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Giặt Thảm
                                </a>
                                <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="navbarDropdown" style="float:left">
                                    <li><a class="dropdown-item" href="#">Giặt Thảm Văn Phòng</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Giặt Thảm Gia Đình</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Dịch Vụ Khác</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Mẹo Làm Sạch</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Tuyển Dụng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Liên Hệ</a>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <a class="me-2 rounded-5 text-white border-0 phone-link-menu" href="tel:"
                               style="background-color:#f4643c; text-align: center; font-size: 25px; padding:5px;
                                      text-decoration: none; display: inline-block; width: 200px;"
                            >
                                <span id="phoneInfor-menu" class="fw-bold">0123456789</span>
                            </a>

                        </form>
                    </div>
                </div>
            </nav>

            <!-- Main Content Body -->
            <div class="row d-flex mt-3 ">
                
                <div class="container">
                    @RenderBody()
                </div>
               
            </div>

            <!-- Các biểu tượng liên hệ cố định -->
            <div class="contact-icon contact-left ">
                <a href="tel:" class="phone-link-information" title="Gọi điện">
                    <i class="fas fa-phone-alt"></i> <span id="phoneInformation"></span>
                </a>
            </div>
            <div class="contact-icon contact-right">
                <a href="https://zalo.me/" class="zalo-link" target="_blank" title="Zalo">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/91/Icon_of_Zalo.svg/1200px-Icon_of_Zalo.svg.png"
                         alt="Zalo" style="width: 40px; height: 40px;" />
                </a>
            </div>

        </div>
    </div>
    <footer style="background-color:#1b2e3e" class="p-5">
       
         <div class="container">
            <div class="row" style="color:white">
                <div class="col-md-3 fs-2" >
                    <h2  style="font-size:20px">DỊCH VỤ VỆ SINH CÔNG NGHIỆP</h2>
                    <span id="phone-footer" class="pt-5"> </span><br>
                    <span id="email-footer" class="pt-5"> </span><br>
                    <span id="address-footer" class="pt-5 "> </span><br>

                </div>
                <div class="col-md-3 fs-2">
                    <h2 style="font-size:25px">Thông tin chung</h2>
                    <span id="" class="pt-5">Dịch Vụ Vệ Sinh </span><br>
                    <span id="" class="pt-5">Dịch Vụ Vệ Sinh </span><br>
                    <span id="" class="pt-5 ">Dịch Vụ Vệ Sinh </span><br>

                </div>
                <div class="col-md-3 fs-2">
                    <h2 style="font-size:25px">Vệ sinh</h2>
                    <span id="" class="pt-5">Dịch Vụ Giặt Thảm </span><br>
                    <span id="" class="pt-5">Sinh </span><br>
                    <span id="" class="pt-5 "> Sinh </span><br>

                </div>
                <div class="col-md-3 fs-2">
                    <h2 style="font-size:25px">
                        FanPage
                    </h2>
                   

                </div>
            </div>
            <div class="row mt-5" >
                <span style="color:white" class="text-center">
                    VỆ SINH NHÀ Ở - VỆ SINH CÔNG NGHIỆP UY TÍN SỐ 1 HÀ NỘI
                </span>
              
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
        var home = {
            init: function () {
                home.getConfig();
            },
            getConfig: function () {
                $.ajax({
                    url: "/Information/getInfor/",
                    method: "GET",
                    dataType: "json",
                    success: function (res) {
                        $("#phoneInfor").text(res.phone);
                        $("#phoneInfor-menu").text(res.phone);
                        $("#phone-footer").text("Hotline: "+res.phone);

                        $("#phoneInformation").text(res.phone);
                        $("#emailInfor").text(res.email);
                        // Cập nhật href của số điện thoại
                        $(".phone-link").attr("href", "tel:" + res.phone);
                        $(".phone-link-information").attr("href", "tel:" + res.phone);
                        $(".phone-link-menu").attr("href", "tel:" + res.phone);
                        // Cập nhật href của Zalo
                        $(".zalo-link").attr("href", "https://zalo.me/" + res.phone);
                        $("#email-footer").text("Email: "+res.email);
                        $("#address-footer").text("Địa chỉ: "+res.address);
                    },
                });
            },
        }
        home.init();
    </script>

    @RenderSection("scripts", required: false)
</body>

</html>
